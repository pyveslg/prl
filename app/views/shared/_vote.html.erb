<i
  class="fas fa-caret-up vote <%= 'green' if vote&.value == 1 %>"
  data-commit_id="<%= commit.id %>"
  data-vote="upvote"
  data-value="<%= vote ? 0 : 1 %>"
></i>
<i
  class="fas fa-caret-down vote <%= 'red' if vote&.value == -1 %>"
  data-commit_id="<%= commit.id %>"
  data-vote="downvote"
  data-value="<%= vote ? 0 : -1 %>"
></i>
