<div class="container">
  <h1><%= @commits.count %> <%= "commit".pluralize(@commits.count) %></h1>


  <ul class="commit-listing">
    <% @commits.each do |commit| %>
      <li>
        <p><%= commit.message %></p>
        <p><%= commit.user.first_name %> <%= commit.user.last_name %></p>
        <div class="votes-box">
          <div class="votes">
            <%= link_to create_votes_path(commit) do  %>
              <i class="fas fa-caret-up upvote vote" data-commit-id="<%= commit.id %>"></i>
            <% end %>
            <%= link_to commit_delete_vote do  %>
              <i class="fas fa-caret-down downvote vote" data-commit-id="<%= commit.id %>"></i>
            <% end %>
          </div>
          <div class="vote-number"><%= commit.votes.count %></div>
        </div>
      </li>
    <% end %>
    <!-- Example -->
    <li>
      <p>Lorem ipsum, dolor, sit amet consectetur adipisicing elit. Harum, illum?</p>
      <p>Bob Morane</p>
      <div class="votes-box">
        <div class="votes">
          <i class="fas fa-caret-up upvote"></i>
          <i class="fas fa-caret-down downvote"></i>
        </div>
        <div class="vote-number">73</div>
      </div>
    </li>
  </ul>

</div>
